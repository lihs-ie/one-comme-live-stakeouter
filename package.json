{
  "name": "one-commentator",
  "version": "0.1.0",
  "description": "わんコメ配信URL自動取得プラグイン",
  "main": "dist/plugin.js",
  "type": "commonjs",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm:dev:plugin\" \"pnpm:dev:ui\"",
    "dev:plugin": "webpack --config webpack.plugin.config.js --watch",
    "dev:ui": "webpack serve --config webpack.ui.config.js",
    "build": "pnpm run build:plugin && pnpm run build:ui",
    "build:plugin": "webpack --config webpack.plugin.config.js --mode=production",
    "build:ui": "webpack --config webpack.ui.config.js --mode=production",
    "test": "vitest run",
    "test:watch": "vitest run --watch",
    "test:coverage": "vitest  run --coverage",
    "test:ui": "vitest run --ui",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"src/tests/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" \"src/tests/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"src/tests/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"src/tests/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "zip": "cd dist && zip -r ../one-commentator.zip ."
  },
  "keywords": [
    "わんコメ",
    "OneComme",
    "plugin",
    "streaming",
    "automation"
  ],
  "author": "onecomme-community",
  "license": "MIT",
  "dependencies": {
    "@onecomme.com/onesdk": "^8.0.0",
    "hash-it": "^6.0.0",
    "neverthrow": "^8.2.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-onboarding": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-webpack5": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "concurrently": "^8.2.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "globals": "^16.4.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.0",
    "jiti": "^2.5.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "storybook": "^8.0.0",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.43.0",
    "uuid": "^12.0.0",
    "vitest": "^1.6.1",
    "vitest-fetch-mock": "^0.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.0",
    "zip-webpack-plugin": "^4.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
